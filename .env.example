# AG Network Environment Configuration
# Copy this file to .env and fill in values as needed

# Database path (relative to project root)
AG_DB_PATH=data/ag.sqlite

# Logging level (DEBUG, INFO, WARNING, ERROR)
AG_LOG_LEVEL=INFO

# Runs directory
AG_RUNS_DIR=runs

# =============================================================================
# LLM Configuration (M3)
# =============================================================================
# Enable LLM mode (0=disabled/manual mode, 1=enabled)
AG_LLM_ENABLED=0

# Default provider and model
AG_LLM_DEFAULT_PROVIDER=anthropic
AG_LLM_DEFAULT_MODEL=claude-sonnet-4-20250514

# Generation parameters
AG_LLM_TEMPERATURE=0.7
AG_LLM_MAX_TOKENS=4096
AG_LLM_TIMEOUT_S=60

# Critic role configuration (optional, falls back to default if not set)
# Use a more capable model for quality review
# AG_LLM_CRITIC_PROVIDER=anthropic
# AG_LLM_CRITIC_MODEL=claude-sonnet-4-20250514

# Draft role configuration (optional, falls back to default if not set)
# Could use a faster/cheaper model for initial drafts
# AG_LLM_DRAFT_PROVIDER=anthropic
# AG_LLM_DRAFT_MODEL=claude-sonnet-4-20250514

# =============================================================================
# API Keys
# =============================================================================
# Required for LLM mode with respective provider
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...